{
	"name": "carta-md",
	"description": "A lightweight, fully customizable, Markdown editor",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/BearToCode/carta-md.git"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"import": "./dist/index.js"
		},
		"./default-theme.css": "./dist/default-theme.css",
		"./light.css": "./dist/light.css",
		"./dark.css": "./dist/dark.css"
	},
	"version": "2.6.0",
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-kit sync && svelte-package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^1.0.0-next.90",
		"@sveltejs/kit": "^1.0.0-next.587",
		"@sveltejs/package": "^2.0.2",
		"svelte-check": "^3.2.0",
		"tslib": "^2.4.1",
		"typescript": "^5.1.6",
		"typescript-plugin-css-modules": "^5.0.1"
	},
	"type": "module",
	"dependencies": {
		"@speed-highlight/core": "1.2.2",
		"marked": "^6.0.0",
		"marked-gfm-heading-id": "^3.0.5",
		"marked-mangle": "^1.1.1"
	},
	"peerDependencies": {
		"svelte": "^3.54.0 || ^4.0.0"
	},
	"keywords": [
		"carta",
		"markdown",
		"editor",
		"marked",
		"text editor",
		"marked editor",
		"slash",
		"syntax highlighting",
		"emoji",
		"katex"
	],
	"files": [
		"dist"
	]
}
