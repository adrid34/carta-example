{
	"name": "@cartamd/plugin-emoji",
	"version": "2.0.5",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"license": "MIT",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/BearToCode/carta-md.git"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./default-theme.css": {
			"import": "./dist/default-theme.css",
			"require": "./dist/default-theme.css"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"dependencies": {
		"node-emoji": "^1.11.0",
		"bezier-easing": "^2.1.0"
	},
	"peerDependencies": {
		"svelte": "^3.54.0",
		"carta-md": "^2.0.5",
		"marked": "^4.3.0"
	},
	"devDependencies": {
		"carta-md": "workspace:*",
		"@types/marked": "^4.0.8",
		"@types/node-emoji": "^1.8.2",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.5.0",
		"@sveltejs/package": "^2.0.0",
		"publint": "^0.1.9",
		"svelte": "^3.54.0",
		"svelte-check": "^3.0.1",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.3.0"
	},
	"svelte": "./dist/index.js",
	"keywords": [
		"carta",
		"markdown",
		"editor",
		"marked",
		"text editor",
		"marked editor",
		"slash",
		"syntax highlighting",
		"emoji",
		"katex"
	]
